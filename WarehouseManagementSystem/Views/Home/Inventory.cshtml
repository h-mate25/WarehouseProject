@{
    ViewData["Title"] = "Inventory";
    ViewData["Breadcrumb"] = "Home / Inventory";
}

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white p-6 rounded shadow-sm">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500">Total Items</p>
                <h3 class="text-2xl font-bold mt-2">0</h3>
            </div>
            <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center">
                <i class="ri-box-3-line text-blue-500"></i>
            </div>
        </div>
        <div class="mt-4 text-sm text-blue-500">
            <span class="items-added-today">+0 today</span>
        </div>
    </div>
    <div class="bg-white p-6 rounded shadow-sm">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500">Low Stock Items</p>
                <h3 class="text-2xl font-bold mt-2">0</h3>
            </div>
            <div class="w-12 h-12 bg-red-50 rounded-full flex items-center justify-center">
                <i class="ri-error-warning-line text-red-500"></i>
            </div>
        </div>
        <div class="mt-4 text-sm text-red-500">
            <span>Needs attention</span>
        </div>
    </div>
    <div class="bg-white p-6 rounded shadow-sm">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500">Categories</p>
                <h3 class="text-2xl font-bold mt-2">0</h3>
            </div>
            <div class="w-12 h-12 bg-green-50 rounded-full flex items-center justify-center">
                <i class="ri-folder-line text-green-500"></i>
            </div>
        </div>
        <div class="mt-4 text-sm text-green-500">
            <span>Active categories</span>
        </div>
    </div>
    <div class="bg-white p-6 rounded shadow-sm">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500">Total Value</p>
                <h3 class="text-2xl font-bold mt-2">$0</h3>
            </div>
            <div class="w-12 h-12 bg-purple-50 rounded-full flex items-center justify-center">
                <i class="ri-money-dollar-circle-line text-purple-500"></i>
            </div>
        </div>
        <div class="mt-4 text-sm text-purple-500">
            <span>Current inventory value</span>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <div class="lg:col-span-2 bg-white rounded shadow-sm">
        <div class="p-6 border-b flex justify-between items-center">
            <h3 class="text-lg font-bold">Stock List</h3>
            <div class="flex gap-2">
                <input type="text" placeholder="Search items..." class="px-4 py-2 border rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-primary">
                <button data-modal="addItemModal" class="px-4 py-2 bg-[#59dd7e] text-white rounded-full text-sm font-medium">Add Item</button>
            </div>
        </div>
        <div class="overflow-x-auto">
            <div class="max-h-[400px] overflow-y-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 sticky top-0 z-10">
                        <tr class="bg-gray-50">
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SKU</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Condition</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <!-- Items will be loaded dynamically -->
                        <tr class="animate-pulse hidden">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="h-4 bg-gray-200 rounded w-16"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="h-4 bg-gray-200 rounded w-24"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="h-4 bg-gray-200 rounded w-20"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="h-4 bg-gray-200 rounded w-12"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="h-4 bg-gray-200 rounded w-32"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="h-4 bg-gray-200 rounded w-16"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="h-4 bg-gray-200 rounded w-24"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="bg-white rounded shadow-sm">
        <div class="p-6 border-b">
            <h3 class="text-lg font-bold">Quick Actions</h3>
            <span class="inline-block mt-1 px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-medium rounded">under development</span>
        </div>
        <div class="p-6 space-y-4">
            <button data-modal="stocktakeModal" class="stocktake-button w-full flex items-center justify-between p-4 bg-blue-50 text-blue-600 rounded-button hover:bg-blue-100">
                <span>Start Stocktake</span>
                <i class="ri-clipboard-check-line"></i>
            </button>
            <button data-modal="scanModal" class="scan-button w-full flex items-center justify-between p-4 bg-green-50 text-green-600 rounded-button hover:bg-green-100">
                <span>Scan Items</span>
                <i class="ri-qr-scan-line"></i>
            </button>
            <button data-modal="issueModal" class="issue-button w-full flex items-center justify-between p-4 bg-purple-50 text-purple-600 rounded-button hover:bg-purple-100">
                <span>Report Issue</span>
                <i class="ri-error-warning-line"></i>
            </button>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="bg-white rounded shadow-sm">
        <div class="p-6 border-b">
            <h3 class="text-lg font-bold">Stock Movement</h3>
        </div>
        <div id="stockMovementChart" class="chart-container"></div>
    </div>
    <div class="bg-white rounded shadow-sm">
        <div class="flex items-center justify-between px-4 py-3 border-b">
            <h3 class="text-lg font-semibold text-gray-900">Recent Activity</h3>
            <button data-modal="allActivitiesModal" class="text-sm text-blue-600 hover:underline">All</button>
        </div>
        <div class="max-h-[400px] overflow-y-auto">
            <div id="recentActivities" class="p-6 space-y-6">
                <p class="text-gray-500">Loading recent activities...</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/inventory.js"></script>
    <script>
        // Initialize the inventory manager explicitly after the page is loaded
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Inventory page DOM content loaded');
            
            // Ensure we're using the correct implementation
            console.log('submitAddItemForm function exists?', typeof window.submitAddItemForm === 'function');
            
            // Check if inventory manager has already been initialized
            if (typeof inventoryManager !== 'undefined' && 
                typeof inventoryManager.init === 'function' && 
                !inventoryManager.isInitialized()) {
                console.log('Manually initializing inventory manager from Inventory.cshtml');
                inventoryManager.init();
            } else {
                console.log('Inventory manager already initialized or not available');
            }
        });
    </script>
} 
{
  "name": "warehouse-management-system-tests",
  "version": "1.0.0",
  "description": "Jest tests for Warehouse Management System",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.4",
    "babel-jest": "^28.1.2",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "../**/*.js",
      "!../**/node_modules/**"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
} 